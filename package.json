{
    "name": "eldspire",
    "main": "dist/worker.js",
    "private": true,
    "description": "Wiki app for the fantasy world of Eldspire",
    "license": "ISC",
    "sideEffects": false,
    "scripts": {
        "clear": "rm -rf ./public/build",
        "css:dev": "postcss **/*.css --dir app/styles -w",
        "css:build": "postcss **/*.css --dir app/styles --env production",
        "build": "npm run clear && npm run css:build && remix build",
        "dev": "npm-run-all --parallel --print-label --race css:dev remix:dev worker:start",
        "remix:dev": "remix watch",
        "worker:build": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
        "worker:dev": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
        "worker:start": "miniflare --build-command \"npm run worker:dev\" --watch",
        "deploy": "npm run build && wrangler publish",
        "test": "vitest",
        "postinstall": "remix setup cloudflare"
    },
    "dependencies": {
        "@notionhq/client": "^1.0.3",
        "@remix-run/cloudflare-workers": "^1.4.0",
        "@remix-run/cloudflare": "^1.4.0",
        "@remix-run/react": "^1.2.3",
        "@remix-run/server-runtime": "^1.3.2",
        "autoprefixer": "^10.4.2",
        "framer-motion": "^6.2.8",
        "react": "18",
        "react-dom": "18",
        "react-router-dom": "^6.0.2",
        "remix": "^1.2.3",
        "zustand": "^3.7.1"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^2.2.2",
        "@remix-run/dev": "^1.2.3",
        "@remix-run/eslint-config": "^1.2.3",
        "@remix-run/node": "^1.3.1",
        "@types/node": "^14.0.14",
        "@types/react": "^17.0.24",
        "@types/react-dom": "^17.0.9",
        "cssnano": "^5.1.7",
        "esbuild": "^0.13.0",
        "eslint": "^8.9.0",
        "miniflare": "^2.3.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.8",
        "postcss-cli": "^9.1.0",
        "tailwindcss": "^3.0.23",
        "typescript": "^4.5.5"
    },
    "engines": {
        "node": ">=14.x"
    }
}
